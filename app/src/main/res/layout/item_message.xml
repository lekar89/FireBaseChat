<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messengerImageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_myplaces"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <ImageView
                android:id="@+id/messageImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"/>
            <VideoView
                android:id="@+id/messageVideoView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:adjustViewBounds="true"

                android:scaleType="fitCenter"
                />
            <LinearLayout
                android:id="@+id/message_layout_for_web"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <WebView
                    android:id="@+id/message_veb_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <MediaController
                android:id="@+id/message_audio_controller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </MediaController>

            <ToggleButton
                android:id="@+id/message_play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="stop"
                android:textOn="playing"
                android:src="@mipmap/ic_play"
                />

            <com.google.android.gms.maps.MapView
                android:id="@+id/message_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/messengerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>